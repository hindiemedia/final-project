<div class="row">
	<div class="nav clearfix">
		<div class="header col-md-8 col-md-offset-1">
			<img src="http://hindiemedia.com/wp-content/uploads/2014/04/shopping_cart1.png" alt="shopping cart" class="shoppingCart">
			<h1 class="title"> Welcome to Grocery Buddy</h1>
		</div>
	</div>

	<div class="main col-md-6 col-md-offset-3">
			<h2>Create a new List</h2>
		<button type="button" class="btn btn-default">>
			<%= link_to "New List", new_list_path %>
		</button>
		<h3> Here Are You Grocery Lists </h3>	
		<% @lists.each do |list| %>
		  <section>
		  	<h3><%= link_to list.name%></h3>
		    <h4><%= list.date_created %></h4>
		  	<button type="button" class="btn btn-default"><%= link_to "Delete", list_path(list.id), method: 'delete' %></button>
		  	<button type="button" class="btn btn-default"><%= link_to "Edit Your List", edit_list_path(list) %></button>
		<% end %>
	</div>

</div>

