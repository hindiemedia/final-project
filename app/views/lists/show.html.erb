<h1><%= @list.name %></h1>

<h4>Add new Item:</h4>

<%= form_for @item do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>
   <%= f.hidden_field(:list_id, @list.id) %> 
   <%= f.submit %>
<% end %>
<p><%= link_to @list.name, @list.date_created %>
<p><%= link_to "Back to home page", root_path %></p>

