<div class="main col-md-6 col-md-offset-3">
	<h1><%= @list.name %></h1>

	<h4>Add new Item:</h4>

	<%= form_for @item do |f| %>
	   <%= f.label :name %>
	   <%= f.text_field :name %>
	   <%= f.hidden_field(:list_id, value: @list.id) %> 
	   <%= f.submit %>
	<% end %>
	<br/>
	<p><%= link_to "Back to home page", root_path %></p>
</div>

